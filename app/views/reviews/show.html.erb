<div class="p-10 bg-blue-100">
    <div class="bg-white p-3 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold mb-2 text-gray-800"><%= @review.title %></h1>
        <p class="text-gray-800"><%= @review.review %></p>
    </div>
</div>

<ul>
    <li><%= link_to "Edit", edit_review_path(@review) %></li>
    <li><%= link_to "Destroy", review_path(@review), method: :delete, data: { confirm: "Are you certain you want to delete this entry?" } %></li>
</ul>